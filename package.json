{
  "name": "rollup-plugin-node-resolve-next",
  "version": "0.3.0",
  "description": "Rollup plugin for import resolution using enhanced Node.js algorithm",
  "main": "dist/index.js",
  "types": "dist/types/index.d.ts",
  "author": "Slava Fomin II",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf ./dist",
    "build": "run-s clean build:tsc",
    "build:tsc": "tsc",
    "test": "run-s lint test:mocha",
    "test:mocha": "mocha -r ts-node/register **/*.spec.ts",
    "lint": "tslint --project ./tsconfig.json -c ./tslint.json ./index.ts ./src/**/*.ts",
    "prepublishOnly": "run-s build test"
  },
  "keywords": [
    "module",
    "node",
    "node-resolve",
    "npm",
    "resolve",
    "rollup",
    "rollup-plugin"
  ],
  "files": [
    "dist/"
  ],
  "dependencies": {
    "minimatch": "^3.0.4",
    "resolve": "^1.11.1"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/minimatch": "^3.0.3",
    "@types/mocha": "^5.2.7",
    "@types/resolve": "0.0.8",
    "chai": "^4.2.0",
    "mocha": "^10.2.0",
    "npm-run-all": "^4.1.5",
    "rollup": "^1.16.4",
    "ts-node": "^8.3.0",
    "tslint": "^5.18.0",
    "typescript": "^3.5.2"
  }
}
